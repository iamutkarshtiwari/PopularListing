<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size"
    android:orientation="vertical">

    <TextView
        android:id="@+id/review_content_text"
        style="@style/BodySansSerifThin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_l"
        android:paddingTop="@dimen/size"
        android:paddingRight="@dimen/size_l"
        android:paddingBottom="@dimen/size"
        android:background="@color/movie_details_review_container_background" />

    <TextView
        android:id="@+id/review_author_text"
        style="@style/BodySansSerifNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_l"
        android:paddingRight="@dimen/size_l"
        android:gravity="end" />
</LinearLayout>